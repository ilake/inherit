<% title "Profile" %>

<p>
  <strong>Birthday:</strong>
  <%=h @profile.birthday %>
</p>
<p>
  <strong>Gender:</strong>
  <%= GENDER_TYPE[@profile.gender.to_s] %>
</p>
<p>
  <strong>Location:</strong>
  <%= @profile.location_list %>
</p>
<p>
  <strong>Intro:</strong>
  <%= @profile.intro %>
</p>
<p>
  <strong>tag:</strong>
  <%= @profile.tag_list %>
</p>

<% if can? :update, @profile %>
  <p>
    <%= link_to "Edit", edit_user_profile_path(current_user)%>
  </p>
<% end %>

<p>
  <%= link_to "回到個人頁面", user_experiences_path(@user) %>
</p>
