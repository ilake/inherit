<% title "Profile" %>

<p>
  <strong>生日:</strong>
  <%=h @profile.birthday %>
</p>
<p>
  <strong>性別:</strong>
  <%= GENDER_TYPE[@profile.gender.to_s] %>
</p>
<p>
  <strong>國家:</strong>
  <%= @profile.location_list %>
</p>
<p>
  <strong>自我介紹:</strong>
  <%= @profile.intro %>
</p>
<p>
  <strong>標籤:</strong>
  <%= @profile.tag_list %>
</p>

<% if can? :update, @profile %>
  <p class='function'>
    <%= link_to "編輯", edit_user_profile_path(current_user)%>
  </p>
<% end %>

<p>
  <%= link_to "回到個人頁面", user_home_path(@user.username) %>
</p>
