<% title @goal.title %>
<% description "#{truncate_u(Sanitize.clean(@goal.content), 100)}" %>
<% keywords @goal.tag_list %>

<%= facebook_like %>
<div class='clear'></div>
<h3 class='avatared anchor'><%= link_to "#{h @goal.user.showname}", user_home_path(@goal.user.username) %> > <%= @goal.title %></h3>
<div class='clear'></div>
<% content_for :sider do %>
  <%= Handcache.get_and_set("#{params.values.sort.to_s}-sider", :expires_in => 60 ) do
    render :partial => 'show_sider', :locals => {:goal => @goal}
  end %>  
<% end %>

<div id='goal_show_main'>
  <div id='goal_show_content'>
    <div>
      <span id='goal_show_time'>
        <div><%=h @goal.title %></div>
        <%=h @goal.start_at.to_s(:date) if @goal.start_at %>
        <%=h "~ #{@goal.end_at.to_s(:date)}" if @goal.end_at %>
        <%= '(私密)' if !@goal.public %>
      </span>
      <span class='goal_author'>
        By <%= link_to "#{@goal.user.nickname}",  user_home_path(@goal.user.username) %>
      </span>

      <% if can? :update, @goal %>
        <span class='goal_function'>
          <%= link_to '編輯', edit_goal_path(@goal) %>
        </span>
      <% end %>
      <% if can? :destroy, @goal %>
        <span class='goal_function'>
          <%= link_to '刪除', @goal, :confirm => '你確定嗎?', :method => :delete %>
        </span>
      <% end %>

    </div>
    <p>
      <strong>類型:</strong>
      <%= GOAL_CATEGORY[@goal.category] %>
      <strong>狀態:</strong>
      <%= GOAL_STATES[@goal.state] %>
    </p>
    <p>
      <strong>關鍵字: </strong>
      <span class='goal_tags'>
        <% tag_link @goal%>
      </span>
      <div class='clear'></div>
    </p>
    <p>
      <%= @goal.content %>
    </p>
  </div>

  <hr >
  <%= render :partial => 'comments/form' %>

  <h3>回覆</h3>
  <div class='commentlist'>
    <% @comments.each do |c| %>
      <div class='comment'>
        <h3><span class='goal_author'><%= link_to c.user.username, user_home_path(c.user.username) %></span> 說...</h3>
        <div><%= Sanitize.clean(c.comment) %></div>
      </div>
    <% end %>
  </div>


</div>
