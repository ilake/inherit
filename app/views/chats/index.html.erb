<% title '意見' %>
<% description @chats.last.try(:content) %>
<% if params[:user_id] %>
  <span class='anchor'>
    <%= link_to "#{h @user.showname}", user_home_path(@user.username) %> > <%= @user.showname %>留言板
  </span>
<% else %>
  站方意見留言板
<% end %>
<%= render :partial => 'form' %>
<div class='chatlist'>
  <% for chat in @chats %>
    <div class='chat'>
      <h3>
        <span class='exp_author'>
          <%= link_to chat.user.nickname, user_home_path(chat.user.nickname) %>
        </span> 說...
        <% if can? :destroy, chat %>
          <%= link_to "刪除", chat, :confirm => '你確定嗎?', :method => :delete %>
        <% end %>
      </h3>
      <div><%= Sanitize.clean(chat.content) %></div>
      <div class='chat_reply'>
        <% chat.children.each do |c|%>
          <h3>
            <span class='exp_author'>
              <%= link_to c.user.nickname, user_home_path(c.user.username) %>
            </span> 說...
            <% if can? :destroy, c %>
              <%= link_to "刪除", c, :confirm => '你確定嗎?', :method => :delete %>
            <% end %>
          </h3>
          <div><%= Sanitize.clean(c.content) %></div>
        <% end %>
      </div>
      <%= link_to "回應", reply_new_chat_path(:chat_id => chat) if chat.reply_permission(current_user) %>
    </div>
  <% end %>
</div>
<%= will_paginate @chats %>
