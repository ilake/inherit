<% title "#{@user.username} 的傳承" %>

<div id='exp_chart'>
</div>

<div class='grid-top'>
  <div id='profile_area'>
    <%= link_to "#{@user.username} 簡介", user_profile_path(@user), :popup => true %>
  </div>
  <div id='fans_area'>
    <span id='exp_follower'>
      粉絲 <%= link_to @user.fans_count, user_fans_path(@user) %>
    </span>
    <% if !@user.is_owner?(current_user)%>
      <span>
        <% if @fan.new_record? %>
          <% form_for @fan, :html => {:id => 'trigger_follow'} do |f| %>
            <%= f.hidden_field :fannable_id %>
            <%= f.hidden_field :fannable_type %>
            <%= f.hidden_field :user_id %>
            <%= f.submit "訂閱", :name => nil%>
          <% end %>
        <% else %>
          <%= link_to '取消訂閱', @fan, :confirm => 'Are you sure?', :method => :delete, :id => 'trigger_follow' %>
        <% end %>
      </span>
    <% end %>
    <span id='exp_ifollew'>
      訂閱 <%= link_to @user.user_ifollow_count, ifollow_user_fans_path(@user) %> 
    </span>
  </div>
  <% if @current_goal %>
    <div id='goal_detail'>
      <%= link_to truncate_u(Sanitize.clean(@current_goal.content), 18), @current_goal %>
      <%=h @current_goal.start_at.to_s(:date) if @current_goal.start_at %>
      <%=h @current_goal.state %>
      <% if can? :update, @current_goal %>
        <%= link_to "Edit", edit_goal_path(@current_goal) %>
      <% end %>
      <% if can? :destroy, @current_goal%>
        <%= link_to "Destroy", @current_goal, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </div>
  <% end %>
</div>
<div class='clear'></div>

  <div id='goal_list'>
    <h2>目標/計畫</h2>
      <div>
        <%= link_to "All", user_experiences_path(@user),
            ( current_page?(user_experiences_path(@user)) ? {:class => 'goal_here'} : nil) %>
      </div>
      <% for goal in @goals %>
        <div>
          <%=link_to h(goal.title), user_exps_path(@user, goal),
            ( goal.id == params[:goal_id].to_i ? {:class => 'goal_here'} : nil) %>
        </div>
      <% end %>
      <% if can?(:create, Goal) && @user.is_owner?(current_user)%>
        <div id='new_goal'>
          <span>
            <%= link_to "新增目標", new_goal_path %>
          </span>
        </div>
      <% end %>
  </div>
<div id='exp_list'>
  <h2>經驗
    <% if can?(:create, Experience) && @user.is_owner?(current_user) %>
      <span id='new_exp'><%= link_to ' ( 新增 ) ', new_user_experience_path(current_user) %></span>
    <% end %>
  </h2>
<table>
  <% @experience_groups.keys.each do |time| %>
    <tr><td><h3><%= time.to_s(:ym)%></h3></td></tr>
    <% @experience_groups[time].each do |experience| %>
      <tr>
        <td class='time'>
          <%= experience.start_at.to_s(:md) if experience.start_at %>
          <%= experience.end_at_date %>
        </td>
        <td class='exp_content'>
          <%= link_to truncate_u(Sanitize.clean(experience.content), 30), experience, :popup => true %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
</div>

<% content_for :bottom_js do %>
  <script>
    Timeline_ajax_url= '<%= javascript_path "timeline/timeline_ajax/simile-ajax-api.js" %>';
    Timeline_urlPrefix='<%= "#{ActionController::Base.asset_host}/javascripts/timeline/timeline_js/" %>';
    Timeline_parameters="bundle=true";
    user_event= <%= @events %>;
    timeline_start_at = new Date(<%= timeline_start_time(@user) %>);
    timeline_default_at = new Date(<%= @experiences.first.try(:start_at).try(:to_s, :js_date) %>);
  </script>
  <%= javascript_include_tag 'timeline/timeline_js/timeline-api.js' %>
  <%= javascript_include_tag 'experience_timeline.js' %>
<% end %>


