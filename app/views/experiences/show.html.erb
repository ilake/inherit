<% title "#{@experience.user.username} experiences" %>

<% content_for :sider do %>
  <div id='exp_show_side'>
    <h3>類似經驗</h3>
    <ul>
      <% @experience.find_related_tags.each do |e| %>
        <li><%= link_to truncate_u(Sanitize.clean(e.content), 20), e%></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div id='exp_show_main'>
  <div id='exp_show_content'>
    <div>
      <span id='exp_show_time'>
        <%= @experience.start_at.to_s(:fulltime )%> ~ <%= @experience.try(:end_at).try(:to_s, :fulltime) %> 
      </span>
      Author: <%= link_to "#{@experience.user.username}",  user_experiences_path(@experience.user) %>
      created_at: <%= @experience.updated_at.to_s(:fulltime) %>

      <% if can? :update, @experience %>
        <%= link_to 'Edit', edit_experience_path(@experience) %>
      <% end %>
      <% if can? :destroy, @experience %>
        <td><%= link_to 'Destroy', @experience, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>

    </div>
    <p><%= link_to @experience.goal.title, @experience.goal if @experience.goal %></p>
    <p>
      <%= @experience.content %>
    </p>
    <p><%= EXP_TYPE[@experience.exp_type] if @experience.exp_type %></p>
    <p>
      <% tag_link @experience %>
    </p>
    <p>
      <%= @experience.location_list %>
    </p>
    <p>
      <%= link_to 'Back',  user_experiences_path(@experience.user) %>
    </p>

  </div>
  加油 :<%= @experience.votes_for %>

  <% form_for @vote do |f| %>
    <%= hidden_field_tag :voteable_type, @vote.voteable_type %>
    <%= hidden_field_tag :exp_id, @experience.id%>
    <%= hidden_field_tag :vote, 1 %>
    <%= f.submit "cheer" %>
  <% end %>


<h3>Experience for some questions</h3>
  <ul>
    <% @questions.each do |question| %>
      <li>
        <%= link_to truncate_u(Sanitize.clean(question.content), 15), question %>
      </li>
    <% end %>
  </ul>

  <hr >
  <h3>New Comment</h3>
  <%= render :partial => 'comments/form' %>

  <h3>Comments</h3>
  <ul>
    <% @comments.each do |c| %>
      <li>
        <%= link_to c.user.username, user_experiences_path(c.user) %>
        <%= c.comment %>
      </li>
    <% end %>
  </ul>


</div>
