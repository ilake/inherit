  <%= Handcache.get_and_set( "home_explore_metatags_#{params[:location]}", :expires_in => 60 ) do
    title "#{truncate_u(Sanitize.clean(@experiences.first.content), 10)}" 
    description "#{truncate_u(Sanitize.clean(@experiences.first.content), 100)}" 
    keywords @exp_tags.map{|e| e.name} << @goal_tags.map{|g| g.name} 
    display_meta_tags :site => '傳承' 
  end %>  
<% end %>

