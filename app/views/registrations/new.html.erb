<h2><%= t("registrations.sign_up")%></h2>
<% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
  <%= f.error_messages %>
  <p><%= f.label :email, t('user.email') %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :username, t('registrations.account') %></p>
  <p><%= f.text_field :username %></p>

  <p><%= f.label :password, t('user.pwd')  %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, t('user.confirm_pwd')  %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit t("registrations.sign_up") %></p>
<% end -%>

<%= render :partial => "shared/devise_links" %>
