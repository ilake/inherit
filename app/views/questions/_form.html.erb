<% content_for :head do %>
  <%= include_tiny_mce_if_needed %>
<% end %>
<% form_for @question do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title, '標題' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content, '內容' %><br />
    <%= f.text_area :content, :size => '60x20', :class => "mceEditor" %>
  </p>
  <p>
    <%= f.label :tag, '標籤(請用空白隔開)' %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p><%= f.submit "送出" %></p>
<% end %>
