<% title "解惑" %>
<% description "解惑" %>
<% keywords "解惑" %>

<% unless params[:user_id] %>
  <div class='top-function-menu'>
    <%= link_to "發問", new_question_path %>
  </div>
<% end %>

<p class='function'>
  <%= link_to "回到#{@user.nickname}頁面", user_home_path(@user.username) if params[:user_id] %>
</p>
<h3><%= @user.nickname %>問過的問題</h3>
<table id='questionlist'>
  <tr>
    <th>標題</th>
    <th>內容</th>
    <th>回應數</th>
    <th>最後回應</th>
  </tr>
  <% for question in @questions %>
    <tr>
      <td class='question_title'>
        <%= link_to h(question.title), question %>
      </td>
      <td>
        <%= truncate_u(Sanitize.clean(question.content), 18) %>
      </td>
      <td>
        <%= question.comments_count %>
      </td>
      <td>
        <%= question.last_comment_time.to_s(:date) %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @questions %>
