    <div id='homepage_content'>
      <%= Handcache.get_and_set("#{params.values.sort.to_s}-#{I18n.locale}-#{current_user_location}", :expires_in => 60) do
        yield
      end %>  
    </div>
  </div>
  <div id='footer' class='anchor'>
    <%= link_to t('site.about'), about_path %>
