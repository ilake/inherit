<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <%= yield(:meta_tag) || display_meta_tags(:site => '傳承') %>
  <%= stylesheet_link_merged :base %>
  <%= yield(:head) %>
</head>
<body>
  <div id='container'>
    <div id="dashboard">
      <ul>
        <li id='dashboard_options'>
          <% if user_signed_in? %>
            <%= current_user.username %>
            <%= link_to "設定", user_profile_path(current_user)%>
            <%= link_to "登出", destroy_user_session_path %>
          <% else %>
            <%= link_to "現在就加入", new_user_registration_path %>
            <%= link_to "登入", new_user_session_path %>
          <% end %>
        </li>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <div id='header'>
        <div id='logo'>
          <h2 id='logo'><%= link_to "傳承.", root_url %></h2>
        </div>

        <div id="location">
          <%= user_current_view_location(params[:location]) %>
        </div>

        <div id='menus'>
          <ul id='main_menu'>
            <% if user_signed_in? %>
              <li><%= link_to "首頁", home_url %></li>
              <li><%= link_to "我的傳承", user_home_path(current_user.username)%></li>
            <% else %>
              <li><%= link_to "首頁", home_url %></li>
            <% end %>
            <li><%= link_to "解惑", questions_path %></li>
            <li><%= link_to "意見", chats_path %></li>
            <li>
              <% form_tag search_url, :method => :get do %>
                搜尋: <%= text_field_tag :search, nil, :size => 10 %>
                <%= submit_tag '搜尋', :name => nil %>
              <% end %>
            </li>
          </ul>
        </div>

      </div>

    <div id='layout'>
      <%= yield %>
      <%= yield :sider %>
    </div>
    <div class='clear'></div>
  </div>
  <div id='footer'>
  </div>
  <%= javascript_include_merged :base %>
  <%= yield :bottom_js %>
  <%= javascript_include_merged :secondary %>
</body>
</html>
