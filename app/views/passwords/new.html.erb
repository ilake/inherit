<h2><%= t'devise.passwords.forget_desc'%></h2>

<% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email, t('user.email') %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit t('devise.passwords.resend_submit') %></p>
<% end %>

<%= render :partial => "shared/devise_links" %>
