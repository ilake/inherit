<% title t('sessions.sign_in') %>

<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
  <p><%= f.label :email, t('user.email') %></p>
  <p><%= f.text_field :email, :class => 'text-input'  %></p>

  <p><%= f.label :password, t('user.pwd') %></p>
  <p><%= f.password_field :password, :class => 'text-input'  %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('sessions.remember_me') %></p>
  <% end -%>

  <p><%= f.submit t("sessions.sign_in") %></p>
<% end -%>

<%= render :partial => "shared/devise_links" %>
